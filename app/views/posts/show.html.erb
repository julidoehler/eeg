<% content_for :html_title, @post.title.upcase %>

<% if signed_in? %>
  <div class="admin_panel">
    <%= link_to 'Edit', edit_post_path(@post), :class => 'admin_control' %>
    <%= link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete, :class => 'admin_control' %>
  </div>
<% end %>

<div class="c">
  <%= image_tag Picture.find(@post.picture_id).data.url(:medium) %>
</div>
<div class="c">
  <div class="c_element color2">
    <span class="date">
        <%=h @post.date_from.strftime("%d.%m.%Y") unless @post.date_from.nil? %>
        <%=h @post.time_from.strftime("%H.%M Uhr") unless @post.time_from.nil? %>
        <%= '-' unless @post.date_to.nil? %> 
        <%=h @post.date_to.strftime("%d.%m.%Y") unless @post.date_to.nil? %>
        <%=h @post.time_to.strftime("%H.%M Uhr") unless @post.time_to.nil? %>
    </span>
    <h1><%=h @post.title.upcase %></h1>
    <p><%=h @post.short_text %></p>
    <%= _ @post.long_text %>
  </div>  
  <div class="c_element color2">
        <p><br/>
      <b>Tags:</b><br/>
      <%= @post.tag_list %>
    </p>
  </div> 
  <% @post.elements.each_index do |i| %>
    <% if i >= 3 and i.odd? %>
      <div class="c_element color2">
        <%= render_element(@post,@post.elements[i]) %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="c">
  <div class="c_element color2">
    <p><%= link_to 'ZurÃ¼ck', posts_path, :class => "back_button" %></p>
  </div>
  <div class="c_element color2">
    <%= add_fcbk(request.url,'light') %>
    <%= add_tweet %>
    <%= add_buzz %>
    <%= add_this %>
  </div>
  <% @post.elements.each_index do |i| %>
    <% if i < 3 %>
      <div class="c_element color2">
        <%= render_element(@post,@post.elements[i]) %>
      </div>
    <% end %>
  <% end %>
  <% @post.elements.each_index do |i| %>
    <% if i >= 3 and i.even? %>
      <div class="c_element color2">
        <%= render_element(@post,@post.elements[i]) %>
      </div>
    <% end %>
  <% end %>
</div>
